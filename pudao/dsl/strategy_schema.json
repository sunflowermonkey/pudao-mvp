{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Pudao Strategy IR (MVP)",
  "type": "object",
  "required": ["strategy_id", "version", "scope", "actions", "guardrails", "rollout"],
  "properties": {
    "strategy_id": { "type": "string", "minLength": 1 },
    "version": { "type": "string", "minLength": 1 },
    "scope": {
      "type": "object",
      "required": ["roadchain_id"],
      "properties": {
        "roadchain_id": { "type": "string", "minLength": 1 },
        "segments": { "type": "array", "items": { "type": "string" } },
        "ramps": { "type": "array", "items": { "type": "string" } },
        "vms": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": false
    },
    "actions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["type"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["vsl", "ramp_metering", "ramp_closure", "vms_message"]
          },
          "segment_id": { "type": "string" },
          "ramp_id": { "type": "string" },
          "vms_id": { "type": "string" },
          "value": { "type": "number" },
          "veh_per_hour": { "type": "number" },
          "ttl_s": { "type": "number", "minimum": 0 },
          "max_duration_s": { "type": "number", "minimum": 0 },
          "condition": { "type": "string" },
          "text": { "type": "string" }
        },
        "additionalProperties": true
      }
    },
    "guardrails": {
      "type": "object",
      "required": ["min_vsl", "max_vsl", "max_delta"],
      "properties": {
        "min_vsl": { "type": "number" },
        "max_vsl": { "type": "number" },
        "max_delta": { "type": "number", "minimum": 0 },
        "max_changes_per_5min": { "type": "number", "minimum": 0 },
        "max_ramp_queue": { "type": "number", "minimum": 0 },
        "max_closure_s": { "type": "number", "minimum": 0 },
        "always_keep_emergency_lane_free": { "type": "boolean" }
      },
      "additionalProperties": true
    },
    "rollout": {
      "type": "object",
      "required": ["mode"],
      "properties": {
        "mode": { "type": "string", "enum": ["immediate", "canary"] },
        "max_revert_time_s": { "type": "number", "minimum": 0 }
      },
      "additionalProperties": true
    },
    "metadata": {
      "type": "object"
    }
  },
  "additionalProperties": false
}
