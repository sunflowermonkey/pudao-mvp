#!/usr/bin/env python3
"""Simple launcher that runs the CLI module from the project root.

Usage: ./launcher/pudao formal check -f examples/strategy.yaml
"""
import os
import sys

# ensure project root is on sys.path
here = os.path.dirname(os.path.dirname(os.path.abspath(__file__)))
if here not in sys.path:
    sys.path.insert(0, here)

# run the CLI as a module
import runpy
sys.exit(runpy.run_module('pudao.cli.pudao_cli', run_name='__main__'))
